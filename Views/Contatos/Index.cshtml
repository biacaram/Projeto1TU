@model Projeto1TU.Models.ContatoViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>Pesquisar por: </p>


<h2>Clientes </h2>
<table>
    <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Nascimento</th>
        <th>Cidade</th>
        <th>Ativo</th>
        <th></th>
    </tr>
    @foreach (var item in Model.ListaContato)
    {
        <tr>
            <td>@item.Nome </td>
            <td> @item.Email </td>
            <td> @item.Apelido </td>
            <td> @item.Cidade </td>
            <td> @item.Ativo </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>